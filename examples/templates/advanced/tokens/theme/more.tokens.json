{
  "brand": {
    "font": {
      "family": {
        "primary": {
          "$value": ["Roboto", "sans-serif"],
          "$type": "fontFamily",
          "$description": "Primary font family"
        },
        "secondary": {
          "$value": ["Lora", "serif"],
          "$type": "fontFamily",
          "$description": "Secondary font family"
        }
      },
      "size": {
        "small": {
          "$value": {
            "value": 12,
            "unit": "px"
          },
          "$type": "dimension",
          "$description": "Small font size"
        },
        "medium": {
          "$value": {
            "value": 16,
            "unit": "px"
          },
          "$type": "dimension",
          "$description": "Medium font size"
        },
        "large": {
          "$value": {
            "value": 24,
            "unit": "px"
          },
          "$type": "dimension",
          "$description": "Large font size"
        }
      },
      "weight": {
        "regular": {
          "$value": 400,
          "$type": "fontWeight",
          "$description": "Regular font weight"
        },
        "bold": {
          "$value": 700,
          "$type": "fontWeight",
          "$description": "Bold font weight"
        }
      }
    },
    "spacing": {
      "small": {
        "$value": {
          "value": 4,
          "unit": "px"
        },
        "$type": "dimension",
        "$description": "Small spacing unit"
      },
      "medium": {
        "$value": {
          "value": 8,
          "unit": "px"
        },
        "$type": "dimension",
        "$description": "Medium spacing unit"
      },
      "large": {
        "$value": {
          "value": 16,
          "unit": "px"
        },
        "$type": "dimension",
        "$description": "Large spacing unit"
      }
    },
    "size": {
      "small": {
        "$value": {
          "value": 24,
          "unit": "px"
        },
        "$type": "dimension",
        "$description": "Small size"
      },
      "medium": {
        "$value": {
          "value": 48,
          "unit": "px"
        },
        "$type": "dimension",
        "$description": "Medium size"
      },
      "large": {
        "$value": {
          "value": 96,
          "unit": "px"
        },
        "$type": "dimension",
        "$description": "Large size"
      }
    },
    "border": {
      "width": {
        "thin": {
          "$value": {
            "value": 1,
            "unit": "px"
          },
          "$type": "dimension",
          "$description": "Thin border width"
        },
        "thick": {
          "$value": {
            "value": 4,
            "unit": "px"
          },
          "$type": "dimension",
          "$description": "Thick border width"
        }
      },
      "radius": {
        "small": {
          "$value": {
            "value": 4,
            "unit": "px"
          },
          "$type": "dimension",
          "$description": "Small border radius"
        },
        "large": {
          "$value": {
            "value": 8,
            "unit": "px"
          },
          "$type": "dimension",
          "$description": "Large border radius"
        }
      }
    },
    "shadow": {
      "small": {
        "$value": {
          "offsetX": {
            "value": 0,
            "unit": "px"
          },
          "offsetY": {
            "value": 1,
            "unit": "px"
          },
          "blur": {
            "value": 3,
            "unit": "px"
          },
          "spread": {
            "value": 0,
            "unit": "px"
          },
          "color": "#00000040"
        },
        "$type": "shadow",
        "$description": "Small shadow"
      },
      "large": {
        "$value": {
          "offsetX": {
            "value": 0,
            "unit": "px"
          },
          "offsetY": {
            "value": 4,
            "unit": "px"
          },
          "blur": {
            "value": 8,
            "unit": "px"
          },
          "spread": {
            "value": 0,
            "unit": "px"
          },
          "color": "#00000040"
        },
        "$type": "shadow",
        "$description": "Large shadow"
      }
    },
    "motion": {
      "duration": {
        "short": {
          "$value": { "value": 200, "unit": "ms" },
          "$type": "duration",
          "$description": "Short duration for transitions"
        },
        "long": {
          "$value": { "value": 500, "unit": "ms" },
          "$type": "duration",
          "$description": "Long duration for transitions"
        }
      }
    }
  },
  "alias": {
    "spacing": {
      "padding": {
        "small": {
          "$value": "{brand.spacing.small}",
          "$type": "dimension",
          "$description": "Small padding"
        },
        "medium": {
          "$value": "{brand.spacing.medium}",
          "$type": "dimension",
          "$description": "Medium padding"
        },
        "large": {
          "$value": "{brand.spacing.large}",
          "$type": "dimension",
          "$description": "Large padding"
        }
      },
      "margin": {
        "small": {
          "$value": "{brand.spacing.small}",
          "$type": "dimension",
          "$description": "Small margin"
        },
        "medium": {
          "$value": "{brand.spacing.medium}",
          "$type": "dimension",
          "$description": "Medium margin"
        },
        "large": {
          "$value": "{brand.spacing.large}",
          "$type": "dimension",
          "$description": "Large margin"
        }
      }
    },
    "shadow": {
      "modal": {
        "$value": {
          "offsetX": "{brand.spacing.medium}",
          "offsetY": "{brand.spacing.large}",
          "blur": "{brand.spacing.large}",
          "spread": {
            "value": 0,
            "unit": "px"
          },
          "color": "{brand.color.neutral.dark}"
        },
        "$type": "shadow",
        "$description": "Shadow for modals"
      },
      "advenced": {
        "$value": [
          "{brand.shadow.large}",
          {
            "offsetX": "{brand.spacing.medium}",
            "offsetY": "{brand.spacing.large}",
            "blur": "{brand.spacing.large}",
            "spread": {
              "value": 0,
              "unit": "px"
            },
            "color": "{brand.color.neutral.dark}"
          }
        ],
        "$type": "shadow",
        "$description": "Shadow for advenced"
      }
    },
    "motion": {
      "hover": {
        "duration": {
          "$value": "{brand.motion.duration.short}",
          "$type": "duration",
          "$description": "Duration for hover transitions"
        }
      },
      "modal": {
        "duration": {
          "$value": "{brand.motion.duration.long}",
          "$type": "duration",
          "$description": "Duration for modal transitions"
        }
      }
    }
  }
}
